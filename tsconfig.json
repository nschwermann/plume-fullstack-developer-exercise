{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "abi/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "contracts/**/*",
    "test/**/*",
    "ignition/**/*",
    "hardhat.config.ts",
    "scripts/**/*",
    "artifacts/**/*",
    "cache/**/*",
    "typechain-types/**/*"
  ]
}
